---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
permalink: /project-tags/{{ tag }}/
layout: layouts/base.njk
renderData:
  title: "“{{ tag }}”"
  metaDescription: "Все работы с технлогией “{{ tag }}”"
---
<div class="page-container">
  <div class="tag-list tag-list--no-wrap">
    <h3 class="tag-list__title">Все работы с технологией: "{{ tag | capitalize }}"</h3>
    <a class="btn btn--danger" href="/projects">Удалить фильтр</a>
  </div>

  {% set projectlist = collections[tag] %}
  {% include "components/projectlist.njk" %}

  <nav>
    <a href="{{ '/projects/' | url }}">← Все работы</a>
  </nav>
</div>
